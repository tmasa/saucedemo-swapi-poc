{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@contracts/*": ["./api/swapi-service/contracts/*"],
      "@services/*": ["./api/swapi-service/services/*"],
      "@pages/*": ["./pages/*"]
    }
  },
  "include": ["**/*.ts"]
}